@model CustomerInputModel
@{
    this.ViewData["Title"] = "Add Customer";
    string actionName = this.ViewData["actionName"].ToString();
}
<div class="row">
    <form asp-area="" asp-controller="Customers" asp-action="@actionName" method="post">

        <h3>Create a customer</h3>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"> </span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input class="form-control" asp-for="DateOfBirth" id="date-birth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"> </span>
        </div>

        <input type="submit" value="@actionName" class="btn btn-success" />
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
