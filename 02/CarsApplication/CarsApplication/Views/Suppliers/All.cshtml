@model IEnumerable<CarsApplication.Services.Models.SupplierModel>

@{
    ViewData["Title"] = "View";
}

<h2>View suppliers</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsImporter)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var supplier in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => supplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => supplier.IsImporter)
            </td>
            <td>
                <a asp-area="" asp-controller="Suppliers" asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-warning">Edit</a>
                <form asp-area="" asp-action="Delete" asp-route-id="@supplier.Id" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
        </tr>
}
    </tbody>
</table>
